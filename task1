# Завдання 1. Безпечне отримання першого елемента
# Напишіть функцію safeHead, яка повертає перший елемент списку або Nothing, якщо список порожній.


safeHead :: [a] -> Maybe a
safeHead []    = Nothing
safeHead (x:_) = Just x

main :: IO ()
main = do
    putStrLn "Введіть числа через пробіл:"
    input <- getLine
    let nums = map read (words input) :: [Int]
    case safeHead nums of
        Nothing -> putStrLn "Список порожній!"
        Just x  -> putStrLn ("Перший елемент списку: " ++ show x)
